{% extends 'base.html.twig' %}

{% block title %}Postuler à {{ offer.title }} - JobConnect TN{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Postuler à une offre</h1>
            <p class="text-lg text-gray-600">Remplissez le formulaire ci-dessous pour soumettre votre candidature</p>
        </div>

        <!-- Job Offer Summary -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
            <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                    {% if offer.recruiter.logo %}
                        <img src="{{ asset('/uploads/recruiter/logo/' ~ offer.recruiter.logo) }}"
                             alt="{{ offer.recruiter.companyName }}"
                             class="w-16 h-16 rounded-lg object-cover">
                    {% else %}
                        <div class="w-16 h-16 bg-blue-100 rounded-lg flex items-center justify-center">
                            <i class="bi bi-building text-blue-600 text-2xl"></i>
                        </div>
                    {% endif %}
                </div>
                <div class="flex-1">
                    <h2 class="text-xl font-semibold text-gray-900 mb-2">{{ offer.title }}</h2>
                    <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600">
                        <span class="flex items-center">
                            <i class="bi bi-building mr-2"></i>
                            {{ offer.recruiter.companyName }}
                        </span>
                        {% if offer.location %}
                            <span class="flex items-center">
                                <i class="bi bi-geo-alt mr-2"></i>
                                {{ offer.location }}
                            </span>
                        {% endif %}
                        {% if offer.contractType %}
                            <span class="inline-flex items-center px-3 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded-full">
                                {{ offer.contractType }}
                            </span>
                        {% endif %}
                        {% if offer.salary %}
                            <span class="inline-flex items-center px-3 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">
                                {{ offer.salary }} DT
                            </span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Application Form -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
            <div class="mb-8">
                <h3 class="text-2xl font-semibold text-gray-900 mb-2">Ma Candidature</h3>
                <p class="text-gray-600">Tous les champs marqués d'un * sont obligatoires</p>
            </div>

            {{ form_start(form, {
                action: path('joboffer_apply_submit', { id: offer.id }),
                method: 'POST',
                attr: {
                    class: 'space-y-8',
                    enctype: 'multipart/form-data'
                }
            }) }}

                <!-- CV Upload -->
                <div class="space-y-4">
                    <label class="block text-sm font-medium text-gray-700">
                        <i class="bi bi-file-earmark-pdf mr-2"></i>
                        Curriculum Vitae *
                    </label>
                    <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-blue-400 transition-colors">
                        {{ form_widget(form.cvFile, {'attr': {
                            class: 'hidden',
                            accept: '.pdf,.doc,.docx'
                        }}) }}
                        <div class="cursor-pointer" onclick="document.querySelector('input[type=file]').click()">
                            <i class="bi bi-cloud-upload text-4xl text-gray-400 mb-2"></i>
                            <p class="text-gray-600 font-medium">Cliquez pour sélectionner votre CV</p>
                            <p class="text-sm text-gray-500">PDF, DOC, DOCX • Maximum 5MB</p>
                        </div>
                    </div>
                    {{ form_errors(form.cvFile) }}
                </div>

                <!-- Motivation Letter -->
                <div class="space-y-4">
                    <label class="block text-sm font-medium text-gray-700">
                        <i class="bi bi-pencil-square mr-2"></i>
                        Lettre de motivation *
                    </label>
                    {{ form_widget(form.motivation, {'attr': {
                        class: 'w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 resize-none',
                        rows: 6,
                        placeholder: 'Expliquez pourquoi vous êtes intéressé par cette offre et ce que vous apportez à l\'entreprise...'
                    }}) }}
                    {{ form_errors(form.motivation) }}
                </div>

                <!-- Contact Information -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Phone -->
                    <div class="space-y-4">
                        <label class="block text-sm font-medium text-gray-700">
                            <i class="bi bi-telephone mr-2"></i>
                            Téléphone *
                        </label>
                        {{ form_widget(form.phone, {'attr': {
                            class: 'w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500',
                            placeholder: '+216 XX XXX XXX'
                        }}) }}
                        {{ form_errors(form.phone) }}
                    </div>

                    <!-- City -->
                    <div class="space-y-4">
                        <label class="block text-sm font-medium text-gray-700">
                            <i class="bi bi-geo-alt mr-2"></i>
                            Ville *
                        </label>
                        {{ form_widget(form.city, {'attr': {
                            class: 'w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500',
                            placeholder: 'Ex: Tunis, Sfax, Sousse...'
                        }}) }}
                        {{ form_errors(form.city) }}
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="pt-6 border-t border-gray-200">
                    <button type="submit"
                            class="w-full bg-blue-600 text-white font-semibold py-3 px-6 rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
                        <i class="bi bi-send-fill mr-2"></i>
                        Envoyer ma candidature
                    </button>
                    <p class="text-center text-sm text-gray-500 mt-4">
                        <i class="bi bi-shield-check mr-1"></i>
                        En soumettant votre candidature, vous acceptez notre
                        <a href="#" class="text-blue-600 hover:text-blue-800 underline">politique de confidentialité</a>.
                    </p>
                </div>

            {{ form_end(form) }}
        </div>

        <!-- Back to Offers -->
        <div class="text-center mt-8">
            <a href="{{ path('joboffer_list') }}"
               class="inline-flex items-center px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg transition-colors">
                <i class="bi bi-arrow-left mr-2"></i>
                Retour aux offres
            </a>
        </div>
    </div>
</div>
{% endblock %}
