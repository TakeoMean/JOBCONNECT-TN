{% extends 'base.html.twig' %}

{% block title %}Mon Dashboard{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-blue-50 to-cyan-50">

    <!-- HEADER SECTION -->
    <div class="relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-indigo-600/10 to-cyan-600/10"></div>
        <div class="relative max-w-7xl mx-auto px-4 py-16">
            <div class="text-center">
                <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-r from-indigo-500 to-cyan-500 rounded-full mb-6 shadow-lg">
                    <i class="bi bi-person-circle text-3xl text-white"></i>
                </div>
                <h1 class="text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-cyan-600 mb-4">
                    Bonjour {{ app.user.fullName }} !
                </h1>
                <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                    Bienvenue sur votre espace candidat. Gérez vos candidatures, explorez les offres et suivez vos opportunités professionnelles.
                </p>
            </div>
        </div>
    </div>

    <!-- STATS CARDS -->
    <div class="max-w-7xl mx-auto px-4 -mt-8 relative z-10">
        <div class="grid md:grid-cols-3 gap-8 mb-12">

            <!-- Applications Card -->
            <div class="bg-white rounded-3xl shadow-xl p-8 text-center hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 border border-gray-100">
                <div class="relative">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-2xl mb-6 shadow-lg">
                        <i class="bi bi-file-earmark-text text-2xl text-white"></i>
                    </div>
                    {% if applicationsCount > 0 %}
                        <div class="absolute -top-2 -right-2 w-6 h-6 bg-green-500 rounded-full flex items-center justify-center">
                            <i class="bi bi-check-circle-fill text-white text-xs"></i>
                        </div>
                    {% endif %}
                </div>
                <div class="mb-4">
                    <p class="text-4xl font-extrabold text-blue-600 mb-1">{{ applicationsCount }}</p>
                    <p class="text-lg font-semibold text-gray-700">Candidatures</p>
                    <p class="text-sm text-gray-500">envoyées</p>
                </div>
                <a href="{{ path('candidate_applications_list') }}"
                   class="inline-flex items-center px-6 py-3 bg-blue-50 text-blue-700 rounded-xl hover:bg-blue-100 transition-colors duration-200 font-medium">
                    <i class="bi bi-eye mr-2"></i>
                    Voir mes candidatures
                </a>
                {% if applicationsCount == 0 %}
                    <p class="text-xs text-gray-400 mt-4">Commencez par postuler à des offres !</p>
                {% endif %}
            </div>

            <!-- Saved Offers Card -->
            <div class="bg-white rounded-3xl shadow-xl p-8 text-center hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 border border-gray-100">
                <div class="relative">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-red-500 to-pink-500 rounded-2xl mb-6 shadow-lg">
                        <i class="bi bi-heart-fill text-2xl text-white"></i>
                    </div>
                    {% if savedOffersCount > 0 %}
                        <div class="absolute -top-2 -right-2 w-6 h-6 bg-red-500 rounded-full flex items-center justify-center">
                            <span class="text-white text-xs font-bold">{{ savedOffersCount }}</span>
                        </div>
                    {% endif %}
                </div>
                <div class="mb-4">
                    <p class="text-4xl font-extrabold text-red-600 mb-1">{{ savedOffersCount }}</p>
                    <p class="text-lg font-semibold text-gray-700">Offres</p>
                    <p class="text-sm text-gray-500">sauvegardées</p>
                </div>
                <a href="{{ path('candidate_saved_offers') }}"
                   class="inline-flex items-center px-6 py-3 bg-red-50 text-red-700 rounded-xl hover:bg-red-100 transition-colors duration-200 font-medium">
                    <i class="bi bi-heart mr-2"></i>
                    Mes favoris
                </a>
                {% if savedOffersCount == 0 %}
                    <p class="text-xs text-gray-400 mt-4">Sauvegardez les offres qui vous intéressent</p>
                {% endif %}
            </div>

            <!-- Messages Card -->
            <div class="bg-white rounded-3xl shadow-xl p-8 text-center hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 border border-gray-100">
                <div class="relative">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-green-500 to-emerald-500 rounded-2xl mb-6 shadow-lg">
                        <i class="bi bi-chat-dots-fill text-2xl text-white"></i>
                    </div>
                    {% if unreadMessagesCount > 0 %}
                        <div class="absolute -top-2 -right-2 w-6 h-6 bg-red-500 rounded-full flex items-center justify-center animate-pulse">
                            <span class="text-white text-xs font-bold">{{ unreadMessagesCount }}</span>
                        </div>
                    {% endif %}
                </div>
                <div class="mb-4">
                    <p class="text-4xl font-extrabold text-green-600 mb-1">{{ unreadMessagesCount }}</p>
                    <p class="text-lg font-semibold text-gray-700">Messages</p>
                    <p class="text-sm text-gray-500">non lus</p>
                </div>
                <a href="{{ path('candidate_messages_list') }}"
                   class="inline-flex items-center px-6 py-3 bg-green-50 text-green-700 rounded-xl hover:bg-green-100 transition-colors duration-200 font-medium">
                    <i class="bi bi-chat-dots mr-2"></i>
                    Mes messages
                </a>
                {% if unreadMessagesCount == 0 %}
                    <p class="text-xs text-gray-400 mt-4">Vos messages s'afficheront ici</p>
                {% endif %}
            </div>

        </div>
    </div>

    <!-- QUICK ACTIONS -->
    <div class="max-w-7xl mx-auto px-4 pb-16">
        <div class="bg-white rounded-3xl shadow-xl p-8 border border-gray-100">
            <div class="text-center mb-8">
                <h2 class="text-3xl font-extrabold text-gray-800 mb-2">Actions Rapides</h2>
                <p class="text-gray-600">Accédez rapidement aux fonctionnalités principales</p>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                <a href="{{ path('joboffer_list') }}"
                   class="group bg-gradient-to-r from-purple-500 to-pink-500 text-white p-6 rounded-2xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                    <div class="flex items-center justify-center mb-4">
                        <i class="bi bi-search text-3xl group-hover:scale-110 transition-transform duration-300"></i>
                    </div>
                    <h3 class="text-lg font-bold text-center mb-2">Explorer les offres</h3>
                    <p class="text-sm text-center opacity-90">Découvrez de nouvelles opportunités</p>
                </a>

                <a href="{{ path('candidate_profile') }}"
                   class="group bg-gradient-to-r from-green-500 to-teal-500 text-white p-6 rounded-2xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                    <div class="flex items-center justify-center mb-4">
                        <i class="bi bi-person-circle text-3xl group-hover:scale-110 transition-transform duration-300"></i>
                    </div>
                    <h3 class="text-lg font-bold text-center mb-2">Mon Profil</h3>
                    <p class="text-sm text-center opacity-90">Gérez vos informations</p>
                </a>

                <a href="{{ path('candidate_profile') }}"
                   class="group bg-gradient-to-r from-blue-500 to-indigo-500 text-white p-6 rounded-2xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                    <div class="flex items-center justify-center mb-4">
                        <i class="bi bi-gear text-3xl group-hover:scale-110 transition-transform duration-300"></i>
                    </div>
                    <h3 class="text-lg font-bold text-center mb-2">Mes Paramètres</h3>
                    <p class="text-sm text-center opacity-90">Gérez vos préférences</p>
                </a>

                <a href="{{ path('app_logout') }}"
                   class="group bg-gradient-to-r from-gray-500 to-gray-600 text-white p-6 rounded-2xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                    <div class="flex items-center justify-center mb-4">
                        <i class="bi bi-box-arrow-right text-3xl group-hover:scale-110 transition-transform duration-300"></i>
                    </div>
                    <h3 class="text-lg font-bold text-center mb-2">Déconnexion</h3>
                    <p class="text-sm text-center opacity-90">Sécurisez votre compte</p>
                </a>
            </div>
        </div>

        <!-- RECENT ACTIVITY -->
        <div class="mt-8 bg-white rounded-3xl shadow-xl p-8 border border-gray-100">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h3 class="text-2xl font-bold text-gray-800">Activité Récente</h3>
                    <p class="text-gray-600">Vos dernières actions sur la plateforme</p>
                </div>
                <div class="flex items-center text-sm text-gray-500">
                    <i class="bi bi-clock mr-2"></i>
                    Dernière connexion: Aujourd'hui
                </div>
            </div>

            <div class="space-y-4">
                <div class="flex items-center p-4 bg-gray-50 rounded-xl">
                    <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                        <i class="bi bi-eye text-blue-600"></i>
                    </div>
                    <div class="flex-1">
                        <p class="font-medium text-gray-800">Consultation du dashboard</p>
                        <p class="text-sm text-gray-500">Maintenant</p>
                    </div>
                </div>

                {% if applicationsCount > 0 %}
                <div class="flex items-center p-4 bg-green-50 rounded-xl">
                    <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mr-4">
                        <i class="bi bi-check-circle text-green-600"></i>
                    </div>
                    <div class="flex-1">
                        <p class="font-medium text-gray-800">{{ applicationsCount }} candidature(s) active(s)</p>
                        <p class="text-sm text-gray-500">En attente de réponse</p>
                    </div>
                </div>
                {% endif %}

                {% if unreadMessagesCount > 0 %}
                <div class="flex items-center p-4 bg-yellow-50 rounded-xl">
                    <div class="w-10 h-10 bg-yellow-100 rounded-full flex items-center justify-center mr-4">
                        <i class="bi bi-chat-dots text-yellow-600"></i>
                    </div>
                    <div class="flex-1">
                        <p class="font-medium text-gray-800">{{ unreadMessagesCount }} nouveau(x) message(s)</p>
                        <p class="text-sm text-gray-500">À consulter</p>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

</div>
{% endblock %}
