{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-6xl mx-auto py-8 px-6">
    <!-- Page Header -->
    <div class="mb-8">
        <h1 class="text-4xl font-extrabold text-gray-800 mb-2">
            üí¨ Messagerie
        </h1>
        <p class="text-gray-600">Communiquez avec les recruteurs</p>
    </div>

    <!-- Flash Messages -->
    {% for message in app.flashes('success') %}
        <div class="mb-6 bg-green-100 border-l-4 border-green-500 text-green-700 p-4 rounded-lg">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium">{{ message }}</p>
                </div>
            </div>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="mb-6 bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded-lg">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium">{{ message }}</p>
                </div>
            </div>
        </div>
    {% endfor %}

    <!-- Navigation Tabs -->
    <div class="mb-6">
        <div class="border-b border-gray-200">
            <nav class="-mb-px flex space-x-8">
                <button id="inbox-tab" class="tab-button active border-blue-500 text-blue-600 whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm">
                    üì• Bo√Æte de r√©ception
                </button>
                <button id="compose-tab" class="tab-button border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm">
                    ‚úçÔ∏è Nouveau message
                </button>
            </nav>
        </div>
    </div>

    <!-- Inbox Tab Content -->
    <div id="inbox-content" class="tab-content">
        {% if messages is empty %}
            <div class="bg-white p-12 rounded-xl shadow-lg text-center">
                <div class="mb-6">
                    <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                </div>
                <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun message re√ßu</h3>
                <p class="text-gray-500 mb-6">
                    Vous n'avez pas encore re√ßu de messages des recruteurs.
                </p>
                <button onclick="switchToCompose()" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Envoyer un message
                </button>
            </div>
        {% else %}
            <!-- Messages Statistics -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                <div class="bg-white p-6 rounded-xl shadow-lg">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                                <svg class="w-4 h-4 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Total messages</p>
                            <p class="text-2xl font-bold text-gray-900">{{ messages|length }}</p>
                        </div>
                    </div>
                </div>
                <div class="bg-white p-6 rounded-xl shadow-lg">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                                <svg class="w-4 h-4 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Messages lus</p>
                            <p class="text-2xl font-bold text-gray-900">{{ messages|filter(m => m.isRead)|length }}</p>
                        </div>
                    </div>
                </div>
                <div class="bg-white p-6 rounded-xl shadow-lg">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-8 h-8 bg-orange-100 rounded-full flex items-center justify-center">
                                <svg class="w-4 h-4 text-orange-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Messages non lus</p>
                            <p class="text-2xl font-bold text-gray-900">{{ messages|filter(m => not m.isRead)|length }}</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Messages List -->
            <div class="space-y-4">
                {% for message in messages %}
                    <div class="bg-white rounded-xl shadow-lg border-l-4 {{ message.isRead ? 'border-gray-200' : 'border-blue-500' }} hover:shadow-xl transition-shadow duration-200">
                        <div class="p-6">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <div class="flex items-center space-x-3 mb-2">
                                        <h3 class="text-lg font-semibold text-gray-900">
                                            {{ message.subject ?: 'Message de ' ~ message.sender.fullName }}
                                        </h3>
                                        {% if not message.isRead %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                Nouveau
                                            </span>
                                        {% endif %}
                                    </div>
                                    <p class="text-sm text-gray-600 mb-2">
                                        De : <span class="font-medium">{{ message.sender.fullName }}</span>
                                        ({{ message.sender.companyName ?: message.sender.email }})
                                    </p>
                                    <p class="text-gray-700 mb-3">
                                        {{ message.content|slice(0, 150) }}{% if message.content|length > 150 %}...{% endif %}
                                    </p>
                                    <p class="text-xs text-gray-500">
                                        {{ message.sentAt|date('d/m/Y √† H:i') }}
                                    </p>
                                </div>
                                <div class="ml-4 flex flex-col space-y-2">
                                    <button onclick="viewMessage({{ message.id }}, '{{ message.subject ?: 'Message de ' ~ message.sender.fullName }}', '{{ message.sender.fullName }}', '{{ message.content|escape('js') }}', '{{ message.sentAt|date('d/m/Y √† H:i') }}')"
                                            class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                        Voir
                                    </button>
                                    <button onclick="replyToMessage({{ message.sender.id }}, '{{ message.subject ?: 'Message de ' ~ message.sender.fullName }}')"
                                            class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-green-700 bg-green-100 hover:bg-green-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                                        R√©pondre
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <!-- Compose Tab Content -->
    <div id="compose-content" class="tab-content hidden">
        <div class="bg-white rounded-xl shadow-lg p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Nouveau message</h2>

            <form action="{{ path('candidate_send_message') }}" method="post" class="space-y-6">
                <div>
                    <label for="recruiter_id" class="block text-sm font-medium text-gray-700 mb-2">
                        Destinataire *
                    </label>
                    <select id="recruiter_id" name="recruiter_id" required
                            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                        <option value="">S√©lectionnez un recruteur</option>
                        {% for recruiter in recruiters %}
                            <option value="{{ recruiter.id }}">
                                {{ recruiter.companyName ?: recruiter.fullName }} ({{ recruiter.email }})
                            </option>
                        {% endfor %}
                    </select>
                    {% if recruiters is empty %}
                        <p class="mt-2 text-sm text-gray-500">
                            Aucun recruteur disponible. Vous ne pouvez envoyer des messages qu'aux recruteurs dont vous avez postul√© aux offres.
                        </p>
                    {% endif %}
                </div>

                <div>
                    <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                        Objet
                    </label>
                    <input type="text" id="subject" name="subject" placeholder="Objet du message (optionnel)"
                           class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                </div>

                <div>
                    <label for="content" class="block text-sm font-medium text-gray-700 mb-2">
                        Message *
                    </label>
                    <textarea id="content" name="content" rows="6" required
                              placeholder="√âcrivez votre message ici..."
                              class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 resize-vertical"></textarea>
                </div>

                <div class="flex justify-end space-x-3">
                    <button type="button" onclick="switchToInbox()"
                            class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Annuler
                    </button>
                    <button type="submit"
                            class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed">
                        <svg class="inline-block w-4 h-4 mr-2 -ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                        </svg>
                        Envoyer le message
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Message Modal -->
<div id="messageModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50">
    <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-3/4 lg:w-1/2 shadow-lg rounded-md bg-white">
        <div class="mt-3">
            <div class="flex items-center justify-between mb-4">
                <h3 id="modalTitle" class="text-lg font-medium text-gray-900"></h3>
                <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="mb-4">
                <p id="modalSender" class="text-sm text-gray-600"></p>
                <p id="modalDate" class="text-sm text-gray-500"></p>
            </div>
            <div class="border-t pt-4">
                <p id="modalContent" class="text-gray-700 whitespace-pre-wrap"></p>
            </div>
        </div>
    </div>
</div>

<script>
function switchToInbox() {
    document.getElementById('inbox-tab').classList.add('active', 'border-blue-500', 'text-blue-600');
    document.getElementById('inbox-tab').classList.remove('border-transparent', 'text-gray-500');
    document.getElementById('compose-tab').classList.remove('active', 'border-blue-500', 'text-blue-600');
    document.getElementById('compose-tab').classList.add('border-transparent', 'text-gray-500');

    document.getElementById('inbox-content').classList.remove('hidden');
    document.getElementById('compose-content').classList.add('hidden');
}

function switchToCompose() {
    document.getElementById('compose-tab').classList.add('active', 'border-blue-500', 'text-blue-600');
    document.getElementById('compose-tab').classList.remove('border-transparent', 'text-gray-500');
    document.getElementById('inbox-tab').classList.remove('active', 'border-blue-500', 'text-blue-600');
    document.getElementById('inbox-tab').classList.add('border-transparent', 'text-gray-500');

    document.getElementById('compose-content').classList.remove('hidden');
    document.getElementById('inbox-content').classList.add('hidden');
}

function viewMessage(id, subject, sender, content, date) {
    document.getElementById('modalTitle').textContent = subject;
    document.getElementById('modalSender').textContent = 'De: ' + sender;
    document.getElementById('modalDate').textContent = 'Envoy√© le: ' + date;
    document.getElementById('modalContent').textContent = content;
    document.getElementById('messageModal').classList.remove('hidden');

    // Mark as read (you might want to implement this via AJAX)
    fetch(`/candidat/message/${id}/mark-read`, { method: 'POST' });
}

function replyToMessage(recruiterId, originalSubject) {
    switchToCompose();
    document.getElementById('recruiter_id').value = recruiterId;
    document.getElementById('subject').value = 'Re: ' + originalSubject.replace('Message de ', '');
    document.getElementById('content').focus();
}

function closeModal() {
    document.getElementById('messageModal').classList.add('hidden');
}

// Tab switching
document.getElementById('inbox-tab').addEventListener('click', switchToInbox);
document.getElementById('compose-tab').addEventListener('click', switchToCompose);

// Close modal when clicking outside
document.getElementById('messageModal').addEventListener('click', function(e) {
    if (e.target === this) {
        closeModal();
    }
});
</script>

<style>
.tab-button.active {
    color: #2563eb;
    border-color: #2563eb;
}

.tab-content {
    animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}
</style>
{% endblock %}
