{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-green-100 to-blue-100 py-12 px-6">
    <div class="bg-white p-12 rounded-3xl shadow-2xl w-full max-w-lg">

        <!-- Title -->
        <h1 class="text-4xl font-extrabold text-center mb-8 text-transparent bg-clip-text bg-gradient-to-r from-green-500 to-blue-500">
            Inscription Candidat
        </h1>

        <!-- Form -->
        <form method="post" enctype="multipart/form-data" class="space-y-6">
            
            <!-- Full Name -->
            <input type="text" name="fullName" placeholder="Nom complet" required class="w-full px-6 py-3 border-2 rounded-xl text-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500">
            
            <!-- Email -->
            <input type="email" name="email" placeholder="Email" required class="w-full px-6 py-3 border-2 rounded-xl text-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500">
            
            <!-- Phone -->
            <input type="tel" name="phone" placeholder="Téléphone" required class="w-full px-6 py-3 border-2 rounded-xl text-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500">
            
            <!-- City Selection -->
            <select name="city" class="w-full px-6 py-3 border-2 rounded-xl text-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500">
                <option>Tunis</option>
                <option>Sfax</option>
                <option>Sousse</option>
                <option>Ariana</option>
                <option>Monastir</option>
            </select>

            <!-- Profile Photo Upload -->
            <div>
                <label class="block text-lg font-semibold mb-2">Photo de profil</label>
                <input type="file" id="photoFile" name="photoFile" accept="image/*" class="w-full px-6 py-3 border-2 rounded-xl text-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500" onchange="previewImage(event, 'photoPreview')">
                <img id="photoPreview" class="mt-4 w-32 h-32 rounded-full object-cover mx-auto hidden">
            </div>

            <!-- CV Upload -->
            <div>
                <label class="block text-lg font-semibold mb-2">CV (PDF uniquement)</label>
                <input type="file" name="cvFile" accept=".pdf" class="w-full px-6 py-3 border-2 rounded-xl text-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500">
            </div>

            <!-- Password -->
            <input type="password" name="password" placeholder="Mot de passe" required class="w-full px-6 py-3 border-2 rounded-xl text-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500">

            <!-- Submit Button -->
            <button type="submit" class="w-full bg-gradient-to-r from-green-500 to-blue-600 text-white font-bold text-xl py-4 rounded-xl shadow-md hover:shadow-xl transform hover:scale-105 transition-all duration-300">
                CRÉER MON COMPTE
            </button>
        </form>
    </div>
</div>

<script>
    function previewImage(event, previewId) {
        const reader = new FileReader();
        const preview = document.getElementById(previewId);
        reader.onload = function() {
            preview.src = reader.result;
            preview.classList.remove('hidden');
        };
        reader.readAsDataURL(event.target.files[0]);
    }
</script>
{% endblock %}
