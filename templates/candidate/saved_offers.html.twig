{% extends 'base.html.twig' %}

{% block title %}Mes Offres Sauvegardées - JobConnect TN{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-rose-50 via-pink-50 to-purple-50">

    <!-- HEADER SECTION -->
    <div class="relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-rose-600/10 to-purple-600/10"></div>
        <div class="relative py-20">
            <div class="max-w-6xl mx-auto px-6 text-center">
                <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-r from-rose-500 to-purple-500 rounded-full mb-8 shadow-lg">
                    <i class="bi bi-heart-fill text-3xl text-white"></i>
                </div>
                <h1 class="text-6xl md:text-7xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-rose-600 to-purple-600 mb-6">
                    Mes Offres Sauvegardées
                </h1>
                <p class="text-xl md:text-2xl text-gray-600 max-w-2xl mx-auto">
                    Retrouvez toutes vos offres favorites en un coup d'œil
                </p>
            </div>
        </div>
    </div>

    <!-- CONTENT SECTION -->
    <div class="max-w-6xl mx-auto px-6 pb-20 -mt-16 relative z-10">

        {% if savedOffers is empty %}
            <!-- EMPTY STATE -->
            <div class="text-center py-20">
                <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-r from-gray-400 to-gray-500 rounded-full mb-8 shadow-lg">
                    <i class="bi bi-heart-slash text-4xl text-white"></i>
                </div>
                <h2 class="text-4xl font-extrabold text-gray-800 mb-4">Aucune offre sauvegardée</h2>
                <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
                    Vous n'avez pas encore sauvegardé d'offres. Parcourez les offres disponibles et sauvegardez celles qui vous intéressent.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="{{ path('joboffer_list') }}"
                       class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-rose-500 to-purple-500 text-white font-bold rounded-2xl hover:shadow-xl transition-all duration-300 transform hover:scale-105">
                        <i class="bi bi-search mr-3"></i>
                        Explorer les offres
                    </a>
                    <a href="{{ path('candidate_dashboard') }}"
                       class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-indigo-500 to-blue-500 text-white font-bold rounded-2xl hover:shadow-xl transition-all duration-300">
                        <i class="bi bi-speedometer2 mr-3"></i>
                        Mon Dashboard
                    </a>
                </div>
            </div>
        {% else %}
            <!-- STATS BAR -->
            <div class="bg-white rounded-2xl shadow-lg p-6 mb-8 border border-gray-100">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
                    <div class="flex flex-col items-center">
                        <div class="w-12 h-12 bg-gradient-to-r from-rose-500 to-pink-500 rounded-xl flex items-center justify-center mb-2">
                            <i class="bi bi-heart text-white text-xl"></i>
                        </div>
                        <span class="text-2xl font-bold text-gray-800">{{ savedOffers|length }}</span>
                        <span class="text-sm text-gray-500">Offres sauvegardées</span>
                    </div>
                    <div class="flex flex-col items-center">
                        <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-indigo-500 rounded-xl flex items-center justify-center mb-2">
                            <i class="bi bi-building text-white text-xl"></i>
                        </div>
                        {% set uniqueCompanies = [] %}
                        {% for saved in savedOffers %}
                            {% if saved.offer.recruiter.companyName not in uniqueCompanies %}
                                {% set uniqueCompanies = uniqueCompanies|merge([saved.offer.recruiter.companyName]) %}
                            {% endif %}
                        {% endfor %}
                        <span class="text-2xl font-bold text-gray-800">{{ uniqueCompanies|length }}</span>
                        <span class="text-sm text-gray-500">Entreprises</span>
                    </div>
                    <div class="flex flex-col items-center">
                        <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-xl flex items-center justify-center mb-2">
                            <i class="bi bi-calendar text-white text-xl"></i>
                        </div>
                        <span class="text-2xl font-bold text-gray-800">{{ savedOffers|first.savedAt|date('m/Y') }}</span>
                        <span class="text-sm text-gray-500">Dernière sauvegarde</span>
                    </div>
                    <div class="flex flex-col items-center">
                        <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-500 rounded-xl flex items-center justify-center mb-2">
                            <i class="bi bi-check-circle text-white text-xl"></i>
                        </div>
                        <span class="text-2xl font-bold text-gray-800">{{ savedOffers|length }}</span>
                        <span class="text-sm text-gray-500">Offres actives</span>
                    </div>
                </div>
            </div>

            <!-- SAVED OFFERS LIST -->
            <div class="space-y-6">
                {% for saved in savedOffers %}
                <div class="bg-white rounded-3xl shadow-xl overflow-hidden hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 border border-gray-100 group">

                    <!-- Offer Header -->
                    <div class="p-8">
                        <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-6">

                            <!-- Offer Info -->
                            <div class="flex-1">
                                <div class="flex items-start space-x-4 mb-4">
                                    <!-- Company Logo/Icon -->
                                    <div class="flex-shrink-0">
                                        {% if saved.offer.recruiter.logo %}
                                            <img src="{{ asset('/uploads/recruiter/logo/' ~ saved.offer.recruiter.logo) }}"
                                                 alt="{{ saved.offer.recruiter.companyName }}"
                                                 class="w-16 h-16 rounded-2xl object-cover border-2 border-gray-100">
                                        {% else %}
                                            <div class="w-16 h-16 bg-gradient-to-r from-rose-500 to-purple-500 rounded-2xl flex items-center justify-center">
                                                <i class="bi bi-building text-white text-2xl"></i>
                                            </div>
                                        {% endif %}
                                    </div>

                                    <!-- Offer Details -->
                                    <div class="flex-1">
                                        <h3 class="text-2xl md:text-3xl font-extrabold text-gray-800 mb-2 leading-tight group-hover:text-rose-600 transition-colors">
                                            {{ saved.offer.title }}
                                        </h3>
                                        <div class="flex flex-wrap items-center gap-4 text-gray-600 mb-3">
                                            <div class="flex items-center">
                                                <i class="bi bi-building mr-2 text-rose-500"></i>
                                                <span class="font-medium">{{ saved.offer.recruiter.companyName }}</span>
                                            </div>
                                            <div class="flex items-center">
                                                <i class="bi bi-geo-alt mr-2 text-purple-500"></i>
                                                <span>{{ saved.offer.location ?: 'Non spécifié' }}</span>
                                            </div>
                                            <div class="flex items-center">
                                                <i class="bi bi-clock mr-2 text-blue-500"></i>
                                                <span>{{ saved.savedAt|date('d/m/Y') }}</span>
                                            </div>
                                        </div>

                                        <!-- Tags -->
                                        <div class="flex flex-wrap gap-2 mb-4">
                                            {% if saved.offer.contractType %}
                                                <span class="inline-flex items-center px-3 py-1 bg-rose-100 text-rose-700 text-sm font-medium rounded-full">
                                                    <i class="bi bi-file-earmark-text mr-1"></i>
                                                    {{ saved.offer.contractType }}
                                                </span>
                                            {% endif %}
                                            {% if saved.offer.salary %}
                                                <span class="inline-flex items-center px-3 py-1 bg-green-100 text-green-700 text-sm font-medium rounded-full">
                                                    <i class="bi bi-cash mr-1"></i>
                                                    {{ saved.offer.salary }} DT
                                                </span>
                                            {% endif %}
                                        </div>

                                        <!-- Description Preview -->
                                        {% if saved.offer.description %}
                                            <p class="text-gray-700 leading-relaxed line-clamp-2">
                                                {{ saved.offer.description|striptags|slice(0, 150) }}...
                                            </p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="flex flex-col sm:flex-row gap-3 lg:flex-shrink-0">
                                <a href="{{ path('joboffer_show', {'id': saved.offer.id}) }}"
                                   class="inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-rose-500 to-purple-500 text-white font-bold rounded-2xl hover:shadow-lg transform hover:scale-105 transition-all duration-200">
                                    <i class="bi bi-eye mr-2"></i>
                                    Voir l'offre
                                </a>
                                <a href="{{ path('joboffer_apply', {'id': saved.offer.id}) }}"
                                   class="inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-green-500 to-emerald-500 text-white font-bold rounded-2xl hover:shadow-lg transform hover:scale-105 transition-all duration-200">
                                    <i class="bi bi-send mr-2"></i>
                                    Postuler
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Bottom Accent -->
                    <div class="h-1 bg-gradient-to-r from-rose-500 to-purple-500"></div>
                </div>
                {% endfor %}
            </div>

            <!-- BOTTOM CTA -->
            <div class="text-center mt-12">
                <a href="{{ path('joboffer_list') }}"
                   class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-indigo-500 to-purple-500 text-white font-bold rounded-2xl hover:shadow-xl transition-all duration-300 transform hover:scale-105">
                    <i class="bi bi-plus-circle mr-3 text-xl"></i>
                    Découvrir plus d'offres
                </a>
            </div>
        {% endif %}
    </div>

</div>

<style>
.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>
{% endblock %}
