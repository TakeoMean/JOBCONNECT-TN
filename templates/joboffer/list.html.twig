{% extends 'base.html.twig' %}

{% block title %}Offres d'emploi{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-blue-50 to-cyan-50">

    <!-- HEADER SECTION -->
    <div class="relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-indigo-600/10 to-cyan-600/10"></div>
        <div class="relative py-20">
            <div class="max-w-7xl mx-auto px-6 text-center">
                <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-r from-indigo-500 to-cyan-500 rounded-full mb-8 shadow-lg">
                    <i class="bi bi-briefcase-fill text-3xl text-white"></i>
                </div>
                <h1 class="text-6xl md:text-7xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-cyan-600 mb-6">
                    Offres d'emploi
                </h1>
                <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto mb-8">
                    Découvrez les meilleures opportunités professionnelles et trouvez le poste de vos rêves
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                    <div class="bg-white/80 backdrop-blur-sm px-6 py-3 rounded-full shadow-lg">
                        <span class="text-lg font-semibold text-gray-700">{{ offers|length }} offres disponibles</span>
                    </div>
                    {% if app.user and 'ROLE_CANDIDATE' in app.user.roles %}
                        <a href="{{ path('candidate_saved_offers') }}"
                           class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-pink-500 to-rose-500 text-white font-bold rounded-full hover:shadow-xl transition-all duration-300 transform hover:scale-105">
                            <i class="bi bi-heart-fill mr-2"></i>
                            Mes favoris
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- OFFERS GRID -->
    <div class="max-w-7xl mx-auto px-6 pb-20">
        {% if offers|length > 0 %}
            <div class="grid lg:grid-cols-3 md:grid-cols-2 gap-8 -mt-16 relative z-10">
                {% for offer in offers %}
                <div class="bg-white rounded-3xl shadow-xl overflow-hidden hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 border border-gray-100 group">

                    <!-- HEADER -->
                    <div class="bg-gradient-to-r from-indigo-600 to-cyan-600 text-white p-8 text-center relative overflow-hidden">
                        <div class="absolute inset-0 bg-black/10"></div>
                        <div class="relative">
                            <div class="inline-flex items-center justify-center w-12 h-12 bg-white/20 rounded-full mb-4">
                                <i class="bi bi-building text-xl"></i>
                            </div>
                            <h3 class="text-2xl md:text-3xl font-extrabold mb-2 leading-tight">{{ offer.title }}</h3>
                            <p class="text-lg opacity-90 font-medium">{{ offer.recruiter.companyName }}</p>
                        </div>
                    </div>

                    <!-- CONTENT -->
                    <div class="p-8">
                        <!-- Description -->
                        <div class="mb-6">
                            <p class="text-gray-700 leading-relaxed line-clamp-3">
                                {{ offer.description|striptags|slice(0, 150) ~ '...' }}
                            </p>
                        </div>

                        <!-- Salary & Location -->
                        <div class="flex justify-between items-center mb-6">
                            <div class="text-center">
                                <p class="text-sm text-gray-500 mb-1">Salaire</p>
                                <span class="text-2xl font-extrabold text-green-600">
                                    {{ offer.salary ? offer.salary ~ ' DT' : 'Négociable' }}
                                </span>
                            </div>
                            <div class="text-center">
                                <p class="text-sm text-gray-500 mb-1">Localisation</p>
                                <span class="inline-flex items-center px-4 py-2 bg-purple-100 text-purple-800 rounded-full font-bold text-sm">
                                    <i class="bi bi-geo-alt mr-2"></i>
                                    {{ offer.location }}
                                </span>
                            </div>
                        </div>

                        <!-- Tags -->
                        <div class="flex flex-wrap gap-2 mb-6">
                            <span class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-full text-sm font-medium shadow-sm">
                                <i class="bi bi-file-earmark-text mr-2"></i>
                                {{ offer.contractType }}
                            </span>
                            {% if offer.isRemote %}
                                <span class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-green-500 to-emerald-500 text-white rounded-full text-sm font-medium shadow-sm">
                                    <i class="bi bi-wifi mr-2"></i>
                                    Remote OK
                                </span>
                            {% endif %}
                        </div>

                        <!-- Action Button -->
                        <div class="text-center">
                            {% if app.user and 'ROLE_CANDIDATE' in app.user.roles %}
                                <a href="{{ path('joboffer_apply_form', {'id': offer.id}) }}"
                                   class="inline-flex items-center justify-center w-full px-8 py-4 bg-gradient-to-r from-green-500 to-emerald-600 text-white font-bold text-lg rounded-2xl hover:shadow-xl transform hover:scale-105 transition-all duration-300 group-hover:shadow-2xl">
                                    <i class="bi bi-send-fill mr-3 text-xl"></i>
                                    POSTULER MAINTENANT
                                    <i class="bi bi-arrow-right ml-3 text-xl group-hover:translate-x-1 transition-transform"></i>
                                </a>
                            {% else %}
                                <a href="{{ path('app_login') }}"
                                   class="inline-flex items-center justify-center w-full px-8 py-4 bg-gradient-to-r from-blue-500 to-indigo-500 text-white font-bold text-lg rounded-2xl hover:shadow-xl transition-all duration-300">
                                    <i class="bi bi-box-arrow-in-right mr-3 text-xl"></i>
                                    Se connecter pour postuler
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% else %}
            <!-- EMPTY STATE -->
            <div class="text-center py-20">
                <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-r from-gray-400 to-gray-500 rounded-full mb-8 shadow-lg">
                    <i class="bi bi-briefcase text-4xl text-white"></i>
                </div>
                <h2 class="text-4xl font-extrabold text-gray-800 mb-4">Aucune offre disponible</h2>
                <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
                    Il n'y a pas d'offres d'emploi disponibles pour le moment. Revenez plus tard pour découvrir de nouvelles opportunités !
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="{{ path('joboffer_list') }}"
                       class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-indigo-500 to-cyan-500 text-white font-bold rounded-2xl hover:shadow-xl transition-all duration-300">
                        <i class="bi bi-house-door mr-3"></i>
                        Retour à l'accueil
                    </a>
                    {% if app.user and 'ROLE_CANDIDATE' in app.user.roles %}
                        <a href="{{ path('candidate_dashboard') }}"
                           class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-green-500 to-teal-500 text-white font-bold rounded-2xl hover:shadow-xl transition-all duration-300">
                            <i class="bi bi-speedometer2 mr-3"></i>
                            Mon Dashboard
                        </a>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>

</div>
{% endblock %}
