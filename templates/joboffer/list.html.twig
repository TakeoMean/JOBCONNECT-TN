{% extends 'base.html.twig' %}

{% block body %}
<div class="py-20 bg-gradient-to-br from-blue-50 to-purple-50">
    <h1 class="text-7xl font-black text-center mb-20 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
        Toutes les offres d'emploi & stage
    </h1>

    <div class="grid md:grid-cols-3 gap-12 max-w-7xl mx-auto px-6">
        {% for offer in offers %}
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden transform hover:scale-105 transition duration-300">
            <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white p-10 text-center">
                <h3 class="text-3xl font-black">{{ offer.title }}</h3>
                <p class="text-xl mt-3">{{ offer.recruiter.companyName }}</p>
            </div>

            <div class="p-10">
                <p class="text-gray-600 mb-6 line-clamp-3">{{ offer.description|raw|slice(0, 150) }}...</p>
                <div class="flex justify-between items-center mb-6">
                    <span class="text-3xl font-bold text-green-600">{{ offer.salary ? offer.salary ~ ' DT' : 'NÃ©gociable' }}</span>
                    <span class="bg-purple-100 text-purple-800 px-6 py-3 rounded-full font-bold">{{ offer.location }}</span>
                </div>
                <div class="flex gap-4 mb-8">
                    <span class="bg-blue-100 text-blue-800 px-6 py-3 rounded-full">{{ offer.contractType }}</span>
                    {% if offer.isRemote %}<span class="bg-green-100 text-green-800 px-6 py-3 rounded-full">Remote OK</span>{% endif %}
                </div>
            </div>

            <div class="p-8 bg-gray-50 text-center">
                {% if app.user and 'ROLE_CANDIDATE' in app.user.roles %}
                    <a href="{{ path('joboffer_apply', {'id': offer.id}) }}" class="bg-gradient-to-r from-green-500 to-emerald-600 text-white font-black text-2xl px-20 py-6 rounded-full hover:shadow-2xl transform hover:scale-110 transition">
                        POSTULER MAINTENANT
                    </a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="bg-blue-600 text-white font-black text-2xl px-20 py-6 rounded-full">
                        Se connecter pour postuler
                    </a>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}