{% extends 'base.html.twig' %}

{% block title %}Mes Notifications{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-blue-50 to-cyan-50">

    <!-- HEADER SECTION -->
    <div class="relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-indigo-600/10 to-cyan-600/10"></div>
        <div class="relative py-20">
            <div class="max-w-4xl mx-auto px-6 text-center">
                <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-r from-indigo-500 to-cyan-500 rounded-full mb-8 shadow-lg">
                    <i class="bi bi-bell-fill text-3xl text-white"></i>
                </div>
                <h1 class="text-6xl md:text-7xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-cyan-600 mb-6">
                    Mes Notifications
                </h1>
                <p class="text-xl md:text-2xl text-gray-600 max-w-2xl mx-auto">
                    Restez informé de toutes vos activités et mises à jour importantes
                </p>
            </div>
        </div>
    </div>

    <!-- NOTIFICATIONS LIST -->
    <div class="max-w-4xl mx-auto px-6 pb-20 -mt-16 relative z-10">

        <!-- Flash Messages -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-6 p-4 rounded-2xl {% if label == 'success' %}bg-green-100 text-green-800 border border-green-200{% elseif label == 'error' %}bg-red-100 text-red-800 border border-red-200{% else %}bg-blue-100 text-blue-800 border border-blue-200{% endif %}">
                    <div class="flex items-center">
                        {% if label == 'success' %}
                            <i class="bi bi-check-circle-fill mr-3 text-xl"></i>
                        {% elseif label == 'error' %}
                            <i class="bi bi-x-circle-fill mr-3 text-xl"></i>
                        {% else %}
                            <i class="bi bi-info-circle-fill mr-3 text-xl"></i>
                        {% endif %}
                        <span class="font-medium">{{ message }}</span>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        {% if notifications|length > 0 %}
            <div class="space-y-6">
                {% for notif in notifications %}
                <div class="bg-white rounded-3xl shadow-xl overflow-hidden hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 border-l-8 {% if not notif.isRead %}border-indigo-500 bg-gradient-to-r from-indigo-50/50 to-white{% else %}border-gray-300{% endif %}">

                    <!-- Notification Header -->
                    <div class="p-8">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <!-- Status Indicator -->
                                <div class="flex items-center mb-4">
                                    {% if not notif.isRead %}
                                        <div class="w-3 h-3 bg-indigo-500 rounded-full mr-3 animate-pulse"></div>
                                        <span class="text-sm font-medium text-indigo-600 bg-indigo-100 px-3 py-1 rounded-full">
                                            <i class="bi bi-circle-fill mr-1"></i>
                                            Nouvelle
                                        </span>
                                    {% else %}
                                        <div class="w-3 h-3 bg-gray-400 rounded-full mr-3"></div>
                                        <span class="text-sm font-medium text-gray-500 bg-gray-100 px-3 py-1 rounded-full">
                                            <i class="bi bi-check-circle-fill mr-1"></i>
                                            Lue
                                        </span>
                                    {% endif %}
                                </div>

                                <!-- Title and Message -->
                                <div class="flex items-start space-x-4">
                                    <!-- Notification Icon -->
                                    <div class="flex-shrink-0">
                                        {% if 'acceptée' in notif.title|lower %}
                                            <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
                                                <i class="bi bi-check-circle-fill text-2xl text-green-600"></i>
                                            </div>
                                        {% elseif 'refusée' in notif.title|lower %}
                                            <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center">
                                                <i class="bi bi-x-circle-fill text-2xl text-red-600"></i>
                                            </div>
                                        {% elseif 'message' in notif.title|lower %}
                                            <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                                                <i class="bi bi-chat-dots-fill text-2xl text-blue-600"></i>
                                            </div>
                                        {% elseif 'candidature' in notif.title|lower %}
                                            <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center">
                                                <i class="bi bi-person-plus-fill text-2xl text-purple-600"></i>
                                            </div>
                                        {% elseif 'abonnement' in notif.title|lower or 'renouvellement' in notif.title|lower %}
                                            <div class="w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center">
                                                <i class="bi bi-credit-card-fill text-2xl text-orange-600"></i>
                                            </div>
                                        {% else %}
                                            <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center">
                                                <i class="bi bi-bell-fill text-2xl text-gray-600"></i>
                                            </div>
                                        {% endif %}
                                    </div>

                                    <!-- Content -->
                                    <div class="flex-1">
                                        <h3 class="text-2xl md:text-3xl font-extrabold text-gray-800 mb-4 leading-tight">
                                            {{ notif.title }}
                                        </h3>
                                        <p class="text-lg text-gray-700 leading-relaxed mb-6">
                                            {{ notif.message }}
                                        </p>

                                        <!-- Timestamp -->
                                        <div class="flex items-center text-sm text-gray-500">
                                            <i class="bi bi-clock mr-2"></i>
                                            <span>{{ notif.createdAt|date('d/m/Y à H:i') }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Action Button -->
                            <div class="ml-6 flex-shrink-0">
                                {% if not notif.isRead %}
                                    <a href="{{ path('notification_read', {'id': notif.id}) }}"
                                       class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-500 to-indigo-600 text-white font-bold rounded-2xl hover:shadow-lg transform hover:scale-105 transition-all duration-200">
                                        <i class="bi bi-check-circle mr-2"></i>
                                        Marquer comme lue
                                    </a>
                                {% else %}
                                    <div class="inline-flex items-center px-6 py-3 bg-gray-100 text-gray-600 font-bold rounded-2xl">
                                        <i class="bi bi-check-circle-fill mr-2"></i>
                                        Déjà lue
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <!-- Bottom Border for Unread -->
                    {% if not notif.isRead %}
                        <div class="h-1 bg-gradient-to-r from-indigo-500 to-cyan-500"></div>
                    {% endif %}
                </div>
                {% endfor %}
            </div>

            <!-- MARK ALL AS READ BUTTON -->
            {% set hasUnread = notifications|filter(n => not n.isRead)|length > 0 %}
            {% if hasUnread %}
            <div class="text-center mt-12">
                <form action="{{ path('notification_mark_all_read') }}" method="post" class="inline-block">
                    <button type="submit"
                            class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-green-500 to-emerald-500 text-white font-bold rounded-2xl hover:shadow-xl transition-all duration-300 transform hover:scale-105">
                        <i class="bi bi-check-all mr-3 text-xl"></i>
                        Tout marquer comme lu
                    </button>
                </form>
            </div>
            {% endif %}

        {% else %}
            <!-- EMPTY STATE -->
            <div class="text-center py-20">
                <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-r from-gray-400 to-gray-500 rounded-full mb-8 shadow-lg">
                    <i class="bi bi-bell-slash text-4xl text-white"></i>
                </div>
                <h2 class="text-4xl font-extrabold text-gray-800 mb-4">Aucune notification</h2>
                <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
                    Vous n'avez pas encore de notifications. Elles apparaîtront ici lorsque vous recevrez des mises à jour importantes.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="{{ path('joboffer_list') }}"
                       class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-indigo-500 to-cyan-500 text-white font-bold rounded-2xl hover:shadow-xl transition-all duration-300">
                        <i class="bi bi-search mr-3"></i>
                        Explorer les offres
                    </a>
                    {% if is_granted('ROLE_CANDIDATE') %}
                        <a href="{{ path('candidate_dashboard') }}"
                           class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-green-500 to-teal-500 text-white font-bold rounded-2xl hover:shadow-xl transition-all duration-300">
                            <i class="bi bi-speedometer2 mr-3"></i>
                            Mon Dashboard
                        </a>
                    {% elseif is_granted('ROLE_RECRUITER') %}
                        <a href="{{ path('recruiter_dashboard') }}"
                           class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-green-500 to-teal-500 text-white font-bold rounded-2xl hover:shadow-xl transition-all duration-300">
                            <i class="bi bi-speedometer2 mr-3"></i>
                            Mon Dashboard
                        </a>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>

</div>
{% endblock %}
