{% extends 'base.html.twig' %}

{% block title %}Toutes les candidatures{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-purple-50 py-12">
    <div class="max-w-7xl mx-auto px-6">
        <!-- HEADER -->
        <div class="text-center mb-12">
            <h1 class="text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600 mb-4">
                <i class="bi bi-people-fill mr-4"></i>
                Gestion des Candidatures
            </h1>
            <p class="text-xl text-gray-600">
                Gérez toutes les candidatures et prenez des décisions éclairées
            </p>
        </div>

        <!-- TABLE -->
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full">
                    <thead class="bg-gradient-to-r from-purple-600 to-pink-600 text-white">
                        <tr>
                            <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">
                                <i class="bi bi-briefcase mr-2"></i>Offre
                            </th>
                            <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">
                                <i class="bi bi-person mr-2"></i>Candidat
                            </th>
                            <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">
                                <i class="bi bi-file-earmark-text mr-2"></i>CV
                            </th>
                            <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">
                                <i class="bi bi-chat-quote mr-2"></i>Motivation
                            </th>
                            <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">
                                <i class="bi bi-info-circle mr-2"></i>Statut
                            </th>
                            <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">
                                <i class="bi bi-bar-chart mr-2"></i>Score du test
                            </th>
                            <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">
                                <i class="bi bi-gear mr-2"></i>Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                    {% for application in applications %}
                        <tr class="hover:bg-gradient-to-r hover:from-blue-50 hover:to-purple-50 transition-all duration-300">
                            <td class="px-6 py-4 text-sm text-gray-900 font-medium">
                                {{ application.offer.title }}
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-900">
                                <div class="flex items-center">
                                    <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full flex items-center justify-center text-white font-bold mr-3">
                                        {{ application.candidate.fullName|first|upper }}
                                    </div>
                                    {{ application.candidate.fullName }}
                                </div>
                            </td>
                            <td class="px-6 py-4 text-sm">
                                {% if application.cvFilename %}
                                    <a href="{{ asset('uploads/candidate/cv/' ~ application.cvFilename) }}" target="_blank"
                                       class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 hover:bg-blue-200 transition-colors duration-200">
                                        <i class="bi bi-download mr-1"></i>
                                        Télécharger
                                    </a>
                                {% else %}
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                        <i class="bi bi-dash-circle mr-1"></i>
                                        Non fourni
                                    </span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-700 max-w-xs truncate">
                                {{ application.motivation ?: '—' }}
                            </td>
                            <td class="px-6 py-4 text-sm">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium
                                    {% if application.status == 'Hired' %}
                                        bg-blue-100 text-blue-800
                                    {% elseif application.status == 'Accepted' %}
                                        bg-green-100 text-green-800
                                    {% elseif application.status == 'Refused' %}
                                        bg-red-100 text-red-800
                                    {% else %}
                                        bg-yellow-100 text-yellow-800
                                    {% endif %}">
                                    <i class="bi bi-circle-fill mr-1 text-xs"></i>
                                    {% if application.status == 'Hired' %}
                                        Embauché
                                    {% else %}
                                        {{ application.status }}
                                    {% endif %}
                                </span>
                            </td>
                            <td class="px-6 py-4 text-sm">
                                {% if application.testScore is not null %}
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold
                                        {% if application.testScore >= application.assignedTest.minScore %}
                                            bg-green-100 text-green-800
                                        {% else %}
                                            bg-red-100 text-red-800
                                        {% endif %}">
                                        <i class="bi bi-trophy mr-1"></i>
                                        {{ application.testScore }}%
                                    </span>
                                {% else %}
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                        <i class="bi bi-dash mr-1"></i>
                                        Non testé
                                    </span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-sm space-x-2">
                                {% if application.status == 'Accepted' and application.testScore is not null %}
                                    <a href="{{ path('recruiter_application_accept', {id: application.id}) }}"
                                       class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium bg-green-600 text-white hover:bg-green-700 transition-colors duration-200 shadow-md">
                                        <i class="bi bi-check-circle mr-2"></i>
                                        Embaucher
                                    </a>
                                    <a href="{{ path('recruiter_application_refuse', {id: application.id}) }}"
                                       class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium bg-red-600 text-white hover:bg-red-700 transition-colors duration-200 shadow-md">
                                        <i class="bi bi-x-circle mr-2"></i>
                                        Rejeter
                                    </a>
                                {% elseif application.status == 'Pending' %}
                                    <a href="{{ path('recruiter_application_accept', {id: application.id}) }}"
                                       class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium bg-green-600 text-white hover:bg-green-700 transition-colors duration-200 shadow-md">
                                        <i class="bi bi-check-circle mr-2"></i>
                                        Pré-sélectionner
                                    </a>
                                    <a href="{{ path('recruiter_application_refuse', {id: application.id}) }}"
                                       class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium bg-red-600 text-white hover:bg-red-700 transition-colors duration-200 shadow-md">
                                        <i class="bi bi-x-circle mr-2"></i>
                                        Rejeter
                                    </a>
                                {% endif %}

                                {% if application.status == 'Accepted' and application.assignedTest is empty %}
                                    <a href="{{ path('recruiter_create_test', {id: application.id}) }}"
                                       class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium bg-blue-600 text-white hover:bg-blue-700 transition-colors duration-200 shadow-md">
                                        <i class="bi bi-plus-circle mr-2"></i>
                                        Créer test
                                    </a>
                                {% endif %}

                                {% if application.assignedTest %}
                                    <div class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800 mt-2">
                                        <i class="bi bi-clipboard-check mr-1"></i>
                                        Test: {{ application.assignedTest.title }}
                                    </div>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center">
                                    <i class="bi bi-inbox text-6xl text-gray-300 mb-4"></i>
                                    <p class="text-gray-500 text-lg">Aucune candidature trouvée</p>
                                    <p class="text-gray-400 text-sm">Les nouvelles candidatures apparaîtront ici</p>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
