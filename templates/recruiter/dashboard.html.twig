{% extends 'base.html.twig' %}

{% block title %}Mon Dashboard - Recruteur{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-purple-50 via-pink-50 to-rose-50">

    <!-- HEADER SECTION -->
    <div class="relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-purple-600/10 to-pink-600/10"></div>
        <div class="relative py-20">
            <div class="max-w-7xl mx-auto px-6 text-center">
                <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full mb-8 shadow-lg">
                    <i class="bi bi-building-fill text-3xl text-white"></i>
                </div>
                <h1 class="text-5xl md:text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600 mb-6">
                    Bonjour {{ user.organizationName }} !
                    {% if user.isVerified %}
                        <span class="ml-4 inline-block bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm font-semibold align-middle">Vérifié</span>
                    {% endif %}
                </h1>
                <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto mb-8">
                    Gérez vos offres d'emploi, consultez les candidatures et développez votre équipe
                </p>

                <div class="text-sm text-gray-600 mt-3">
                    {% if user.phone %}<span class="mr-4"><i class="bi bi-telephone"></i> {{ user.phone }}</span>{% endif %}
                    {% if user.website %}<a href="{{ user.website }}" class="text-blue-600 hover:underline" target="_blank">{{ user.website }}</a>{% endif %}
                </div>

                <!-- SUBSCRIPTION STATUS -->
                <div class="inline-flex items-center bg-white/80 backdrop-blur-sm px-6 py-3 rounded-full shadow-lg">
                    <i class="bi bi-star-fill text-amber-500 mr-2"></i>
                    <span class="font-semibold text-gray-700">Abonnement :</span>
                    {% if user.subscription %}
                        <span class="bg-gradient-to-r from-purple-500 to-pink-500 text-white px-4 py-1 rounded-full font-bold text-sm ml-3">
                            {{ user.subscription|upper }}
                        </span>
                        <span class="text-sm text-gray-600 ml-3">
                            Expire le {{ user.subscriptionEndsAt|date('d/m/Y') }}
                        </span>
                    {% else %}
                        <span class="bg-gradient-to-r from-gray-400 to-gray-500 text-white px-4 py-1 rounded-full font-bold text-sm ml-3">
                            GRATUIT
                        </span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- PROFILE PHOTOS SECTION -->
    <div class="max-w-7xl mx-auto px-6 -mt-16 relative z-10 mb-12">
        <div class="flex justify-center space-x-8">
            {% if user.logo %}
                <div class="bg-white rounded-3xl shadow-xl p-6 text-center">
                    <div class="w-24 h-24 bg-gradient-to-r from-purple-100 to-pink-100 rounded-2xl flex items-center justify-center mb-4 mx-auto">
                        <i class="bi bi-building text-3xl text-purple-600"></i>
                    </div>
                    <h3 class="font-bold text-gray-800 mb-2">Logo Entreprise</h3>
                    <img src="{{ asset('uploads/recruiter/logo/' ~ user.logo) }}"
                         class="w-20 h-20 object-cover rounded-xl shadow-lg mx-auto border-4 border-white">
                </div>
            {% endif %}

            {% if user.photo %}
                <div class="bg-white rounded-3xl shadow-xl p-6 text-center">
                    <div class="w-24 h-24 bg-gradient-to-r from-blue-100 to-indigo-100 rounded-2xl flex items-center justify-center mb-4 mx-auto">
                        <i class="bi bi-person-circle text-3xl text-blue-600"></i>
                    </div>
                    <h3 class="font-bold text-gray-800 mb-2">Photo Profil</h3>
                    <img src="{{ asset('uploads/user/photo/' ~ user.photo) }}"
                         class="w-20 h-20 object-cover rounded-full shadow-lg mx-auto border-4 border-white">
                </div>
            {% endif %}
        </div>
    </div>

    <!-- STATS CARDS -->
    <div class="max-w-7xl mx-auto px-6 mb-12">
        <div class="grid lg:grid-cols-3 gap-8">

            <!-- Offers Card -->
            <div class="bg-white rounded-3xl shadow-xl p-8 text-center hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 border border-gray-100">
                <div class="relative">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-2xl mb-6 shadow-lg">
                        <i class="bi bi-file-earmark-text text-2xl text-white"></i>
                    </div>
                    {% if offersCount > 0 %}
                        <div class="absolute -top-2 -right-2 w-6 h-6 bg-green-500 rounded-full flex items-center justify-center">
                            <i class="bi bi-check-circle-fill text-white text-xs"></i>
                        </div>
                    {% endif %}
                </div>
                <div class="mb-4">
                    <p class="text-4xl font-extrabold text-blue-600 mb-1">{{ offersCount }}</p>
                    <p class="text-lg font-semibold text-gray-700">Offres</p>
                    <p class="text-sm text-gray-500">publiées</p>
                </div>
                <a href="{{ path('recruiter_offers_list') }}"
                   class="inline-flex items-center px-6 py-3 bg-blue-50 text-blue-700 rounded-xl hover:bg-blue-100 transition-colors duration-200 font-medium">
                    <i class="bi bi-eye mr-2"></i>
                    Voir mes offres
                </a>
                {% if offersCount == 0 %}
                    <p class="text-xs text-gray-400 mt-4">Commencez par créer votre première offre !</p>
                {% endif %}
            </div>

            <!-- Applications Card -->
            <div class="bg-white rounded-3xl shadow-xl p-8 text-center hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 border border-gray-100">
                <div class="relative">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-red-500 to-pink-500 rounded-2xl mb-6 shadow-lg">
                        <i class="bi bi-envelope-paper-fill text-2xl text-white"></i>
                    </div>
                    {% if applicationsCount > 0 %}
                        <div class="absolute -top-2 -right-2 w-6 h-6 bg-red-500 rounded-full flex items-center justify-center">
                            <span class="text-white text-xs font-bold">{{ applicationsCount }}</span>
                        </div>
                    {% endif %}
                </div>
                <div class="mb-4">
                    <p class="text-4xl font-extrabold text-red-600 mb-1">{{ applicationsCount }}</p>
                    <p class="text-lg font-semibold text-gray-700">Candidatures</p>
                    <p class="text-sm text-gray-500">reçues</p>
                </div>
                <a href="{{ path('recruiter_candidatures') }}"
                   class="inline-flex items-center px-6 py-3 bg-red-50 text-red-700 rounded-xl hover:bg-red-100 transition-colors duration-200 font-medium">
                    <i class="bi bi-envelope-paper mr-2"></i>
                    Voir candidatures
                </a>
                {% if applicationsCount == 0 %}
                    <p class="text-xs text-gray-400 mt-4">Les candidatures apparaîtront ici</p>
                {% endif %}
            </div>

            <!-- Messages Card -->
            <div class="bg-white rounded-3xl shadow-xl p-8 text-center hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 border border-gray-100">
                <div class="relative">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-green-500 to-emerald-500 rounded-2xl mb-6 shadow-lg">
                        <i class="bi bi-chat-dots-fill text-2xl text-white"></i>
                    </div>
                    {% if messagesCount > 0 %}
                        <div class="absolute -top-2 -right-2 w-6 h-6 bg-red-500 rounded-full flex items-center justify-center animate-pulse">
                            <span class="text-white text-xs font-bold">{{ messagesCount }}</span>
                        </div>
                    {% endif %}
                </div>
                <div class="mb-4">
                    <p class="text-4xl font-extrabold text-green-600 mb-1">{{ messagesCount }}</p>
                    <p class="text-lg font-semibold text-gray-700">Messages</p>
                    <p class="text-sm text-gray-500">reçus</p>
                </div>
                <a href="{{ path('recruiter_messages_list') }}"
                   class="inline-flex items-center px-6 py-3 bg-green-50 text-green-700 rounded-xl hover:bg-green-100 transition-colors duration-200 font-medium">
                    <i class="bi bi-chat-dots mr-2"></i>
                    Mes messages
                </a>
                {% if messagesCount == 0 %}
                    <p class="text-xs text-gray-400 mt-4">Vos messages s'afficheront ici</p>
                {% endif %}
            </div>

        </div>
    </div>

    <!-- QUICK ACTIONS -->
    <div class="max-w-7xl mx-auto px-6 pb-20">
        <div class="bg-white rounded-3xl shadow-xl p-8 border border-gray-100">
            <div class="text-center mb-8">
                <h2 class="text-3xl font-extrabold text-gray-800 mb-2">Actions Rapides</h2>
                <p class="text-gray-600">Gérez efficacement vos recrutements</p>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                <a href="{{ path('recruiter_offer_new') }}"
                   class="group bg-gradient-to-r from-purple-500 to-pink-500 text-white p-6 rounded-2xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                    <div class="flex items-center justify-center mb-4">
                        <i class="bi bi-plus-circle-fill text-3xl group-hover:scale-110 transition-transform duration-300"></i>
                    </div>
                    <h3 class="text-lg font-bold text-center mb-2">Créer une offre</h3>
                    <p class="text-sm text-center opacity-90">Publiez un nouveau poste</p>
                </a>

                <a href="{{ path('recruiter_offers_list') }}"
                   class="group bg-gradient-to-r from-blue-500 to-indigo-500 text-white p-6 rounded-2xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                    <div class="flex items-center justify-center mb-4">
                        <i class="bi bi-list-ul text-3xl group-hover:scale-110 transition-transform duration-300"></i>
                    </div>
                    <h3 class="text-lg font-bold text-center mb-2">Toutes mes offres</h3>
                    <p class="text-sm text-center opacity-90">Gérez vos publications</p>
                </a>

                <a href="{{ path('recruiter_candidatures') }}"
                   class="group bg-gradient-to-r from-green-500 to-teal-500 text-white p-6 rounded-2xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                    <div class="flex items-center justify-center mb-4">
                        <i class="bi bi-people-fill text-3xl group-hover:scale-110 transition-transform duration-300"></i>
                    </div>
                    <h3 class="text-lg font-bold text-center mb-2">Candidatures</h3>
                    <p class="text-sm text-center opacity-90">Évaluez les candidats</p>
                </a>

                <a href="{{ path('profile') }}"
                   class="group bg-gradient-to-r from-orange-500 to-red-500 text-white p-6 rounded-2xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                    <div class="flex items-center justify-center mb-4">
                        <i class="bi bi-gear-fill text-3xl group-hover:scale-110 transition-transform duration-300"></i>
                    </div>
                    <h3 class="text-lg font-bold text-center mb-2">Mon Profil</h3>
                    <p class="text-sm text-center opacity-90">Paramètres entreprise</p>
                </a>
            </div>
        </div>

        <!-- RECENT ACTIVITY -->
        <div class="mt-8 bg-white rounded-3xl shadow-xl p-8 border border-gray-100">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h3 class="text-2xl font-bold text-gray-800">Activité Récente</h3>
                    <p class="text-gray-600">Vos dernières actions sur la plateforme</p>
                </div>
                <div class="flex items-center text-sm text-gray-500">
                    <i class="bi bi-clock mr-2"></i>
                    Dernière connexion: Aujourd'hui
                </div>
            </div>

            <div class="space-y-4">
                <div class="flex items-center p-4 bg-gray-50 rounded-xl">
                    <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                        <i class="bi bi-eye text-blue-600"></i>
                    </div>
                    <div class="flex-1">
                        <p class="font-medium text-gray-800">Consultation du dashboard</p>
                        <p class="text-sm text-gray-500">Maintenant</p>
                    </div>
                </div>

                {% if offersCount > 0 %}
                <div class="flex items-center p-4 bg-purple-50 rounded-xl">
                    <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mr-4">
                        <i class="bi bi-file-earmark-text text-purple-600"></i>
                    </div>
                    <div class="flex-1">
                        <p class="font-medium text-gray-800">{{ offersCount }} offre(s) active(s)</p>
                        <p class="text-sm text-gray-500">En cours de recrutement</p>
                    </div>
                </div>
                {% endif %}

                {% if applicationsCount > 0 %}
                <div class="flex items-center p-4 bg-pink-50 rounded-xl">
                    <div class="w-10 h-10 bg-pink-100 rounded-full flex items-center justify-center mr-4">
                        <i class="bi bi-envelope-paper text-pink-600"></i>
                    </div>
                    <div class="flex-1">
                        <p class="font-medium text-gray-800">{{ applicationsCount }} nouvelle(s) candidature(s)</p>
                        <p class="text-sm text-gray-500">À examiner</p>
                    </div>
                </div>
                {% endif %}

                {% if messagesCount > 0 %}
                <div class="flex items-center p-4 bg-green-50 rounded-xl">
                    <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mr-4">
                        <i class="bi bi-chat-dots text-green-600"></i>
                    </div>
                    <div class="flex-1">
                        <p class="font-medium text-gray-800">{{ messagesCount }} nouveau(x) message(s)</p>
                        <p class="text-sm text-gray-500">De candidats intéressés</p>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

</div>
{% endblock %}
