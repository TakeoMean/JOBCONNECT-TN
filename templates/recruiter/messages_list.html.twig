{% extends 'base.html.twig' %}

{% block title %}Mes Messages - JobConnect TN{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-green-50 via-emerald-50 to-teal-50">

    <!-- HEADER SECTION -->
    <div class="relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-green-600/10 to-teal-600/10"></div>
        <div class="relative py-16">
            <div class="max-w-7xl mx-auto px-6 text-center">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-green-500 to-teal-500 rounded-2xl mb-6 shadow-lg">
                    <i class="bi bi-chat-dots-fill text-2xl text-white"></i>
                </div>
                <h1 class="text-4xl md:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-teal-600 mb-4">
                    Mes Messages
                </h1>
                <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
                    Gérez vos conversations avec les candidats intéressés par vos offres
                </p>
            </div>
        </div>
    </div>

    <!-- CONTENT SECTION -->
    <div class="max-w-6xl mx-auto px-6 pb-20 -mt-8 relative z-10">

        <!-- STATS BAR -->
        <div class="bg-white rounded-2xl shadow-lg p-6 mb-8 border border-gray-100">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
                <div class="flex flex-col items-center">
                    <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-500 rounded-xl flex items-center justify-center mb-2">
                        <i class="bi bi-chat-dots text-white text-xl"></i>
                    </div>
                    <span class="text-2xl font-bold text-gray-800">{{ messages|length }}</span>
                    <span class="text-sm text-gray-500">Messages reçus</span>
                </div>
                <div class="flex flex-col items-center">
                    <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-xl flex items-center justify-center mb-2">
                        <i class="bi bi-person text-white text-xl"></i>
                    </div>
                    <span class="text-2xl font-bold text-gray-800">{{ messages|length > 0 ? messages|length : 0 }}</span>
                    <span class="text-sm text-gray-500">Conversations</span>
                </div>
                <div class="flex flex-col items-center">
                    <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-pink-500 rounded-xl flex items-center justify-center mb-2">
                        <i class="bi bi-clock text-white text-xl"></i>
                    </div>
                    <span class="text-2xl font-bold text-gray-800">
                        {% if messages %}
                            {% set latest = messages|first %}
                            {{ latest.sentAt|date('d/m') }}
                        {% else %}
                            -
                        {% endif %}
                    </span>
                    <span class="text-sm text-gray-500">Dernier message</span>
                </div>
                <div class="flex flex-col items-center">
                    <div class="w-12 h-12 bg-gradient-to-r from-orange-500 to-red-500 rounded-xl flex items-center justify-center mb-2">
                        <i class="bi bi-envelope-open text-white text-xl"></i>
                    </div>
                    <span class="text-2xl font-bold text-gray-800">{{ messages|filter(m => m.isRead)|length }}</span>
                    <span class="text-sm text-gray-500">Messages lus</span>
                </div>
            </div>
        </div>

        <!-- ACTION BUTTONS -->
        <div class="flex flex-col sm:flex-row gap-4 mb-8 justify-between items-center">
            <div class="flex gap-3">
                <button class="inline-flex items-center bg-gradient-to-r from-green-500 to-teal-500 text-white font-bold px-6 py-3 rounded-xl hover:shadow-lg hover:scale-105 transition-all duration-200">
                    <i class="bi bi-plus-circle mr-2"></i>
                    Nouveau Message
                </button>
                <button class="inline-flex items-center bg-white text-gray-700 font-medium px-6 py-3 rounded-xl border border-gray-200 hover:bg-gray-50 transition-colors duration-200">
                    <i class="bi bi-funnel mr-2"></i>
                    Tous les messages
                </button>
                <button class="inline-flex items-center bg-white text-gray-700 font-medium px-6 py-3 rounded-xl border border-gray-200 hover:bg-gray-50 transition-colors duration-200">
                    <i class="bi bi-envelope mr-2"></i>
                    Non lus
                </button>
            </div>
            <div class="text-sm text-gray-500">
                {{ messages|length }} message{{ messages|length > 1 ? 's' : '' }} trouvé{{ messages|length > 1 ? 's' : '' }}
            </div>
        </div>

        {% if messages is empty %}
            <!-- EMPTY STATE -->
            <div class="bg-white rounded-3xl shadow-xl p-12 text-center border border-gray-100">
                <div class="w-24 h-24 bg-gradient-to-r from-green-100 to-teal-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="bi bi-chat-dots text-4xl text-green-500"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-800 mb-4">Aucun message reçu</h3>
                <p class="text-gray-600 mb-8 max-w-md mx-auto">
                    Vous n'avez pas encore reçu de messages. Les candidats intéressés par vos offres vous contacteront ici.
                </p>
                <a href="{{ path('recruiter_offers_list') }}"
                   class="inline-flex items-center bg-gradient-to-r from-green-500 to-teal-500 text-white font-bold px-8 py-4 rounded-xl hover:shadow-lg hover:scale-105 transition-all duration-200">
                    <i class="bi bi-eye mr-2"></i>
                    Voir mes offres
                </a>
            </div>
        {% else %}
            <!-- MESSAGES LIST -->
            <div class="space-y-4">
                {% for message in messages %}
                    <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden group hover:-translate-y-1 {{ not message.isRead ? 'ring-2 ring-green-200 bg-green-50/30' : '' }}">

                        <!-- Message Header -->
                        <div class="bg-gradient-to-r from-green-500 to-teal-500 p-4 text-white">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center">
                                        <i class="bi bi-person-fill text-white"></i>
                                    </div>
                                    <div>
                                        <h3 class="font-bold text-lg">{{ message.sender.fullName }}</h3>
                                        <p class="text-green-100 text-sm">{{ message.sender.email }}</p>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <div class="text-sm text-green-100">{{ message.sentAt|date('d/m/Y') }}</div>
                                    <div class="text-xs text-green-200">{{ message.sentAt|date('H:i') }}</div>
                                </div>
                            </div>
                        </div>

                        <!-- Message Content -->
                        <div class="p-6">
                            <div class="mb-4">
                                <h4 class="font-semibold text-gray-800 mb-2">Objet: {{ message.subject ?: 'Message de ' ~ message.sender.fullName }}</h4>
                                <p class="text-gray-700 leading-relaxed">
                                    {{ message.content|length > 300 ? message.content|slice(0, 300) ~ '...' : message.content }}
                                </p>
                            </div>

                            <!-- Related Offer (if any) -->
                            {% if message.offer %}
                                <div class="bg-blue-50 border border-blue-200 rounded-xl p-4 mb-4">
                                    <div class="flex items-center space-x-2">
                                        <i class="bi bi-briefcase text-blue-500"></i>
                                        <span class="text-sm font-medium text-blue-800">Concernant l'offre:</span>
                                        <span class="text-sm text-blue-600">{{ message.offer.title }}</span>
                                    </div>
                                </div>
                            {% endif %}

                            <!-- Actions -->
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-2">
                                    {% if not message.isRead %}
                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-green-100 text-green-800">
                                            <i class="bi bi-circle-fill mr-1 text-xs"></i>
                                            Nouveau
                                        </span>
                                    {% endif %}
                                    <span class="text-sm text-gray-500">
                                        <i class="bi bi-clock mr-1"></i>
                                        {{ message.sentAt|date('d/m/Y à H:i') }}
                                    </span>
                                </div>

                                <div class="flex space-x-2">
                                    <button class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors duration-200 text-sm font-medium">
                                        <i class="bi bi-archive mr-1"></i>
                                        Archiver
                                    </button>
                                    <a href="#"
                                       onclick="replyToMessage({{ message.sender.id }}, '{{ message.subject ?: 'Message de ' ~ message.sender.fullName }}')"
                                       class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-green-500 to-teal-500 text-white rounded-lg hover:shadow-md transition-all duration-200 text-sm font-medium">
                                        <i class="bi bi-reply mr-1"></i>
                                        Répondre
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <!-- BACK TO DASHBOARD -->
        <div class="text-center mt-12">
            <a href="{{ path('recruiter_dashboard') }}"
               class="inline-flex items-center bg-white text-gray-700 font-bold px-8 py-4 rounded-xl border border-gray-200 hover:bg-gray-50 hover:shadow-lg transition-all duration-200">
                <i class="bi bi-arrow-left mr-2"></i>
                Retour au Dashboard
            </a>
        </div>
    </div>

</div>

<!-- NEW MESSAGE MODAL -->
<div id="newMessageModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-white rounded-3xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
            <!-- Modal Header -->
            <div class="bg-gradient-to-r from-green-500 to-teal-500 p-6 text-white rounded-t-3xl">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                        <i class="bi bi-send-fill text-2xl"></i>
                        <h3 class="text-xl font-bold">Nouveau Message</h3>
                    </div>
                    <button id="closeModal" class="text-white hover:bg-white/20 rounded-full p-2 transition-colors">
                        <i class="bi bi-x-lg text-xl"></i>
                    </button>
                </div>
            </div>

            <!-- Modal Body -->
            <div class="p-6">
                <form id="messageForm" action="{{ path('recruiter_send_message') }}" method="post" class="space-y-6">
                    <!-- Recipient Selection -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="bi bi-person mr-1"></i>
                            Destinataire
                        </label>
                        <select id="recipient" name="recipient" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all" required>
                            <option value="">Sélectionnez un candidat...</option>
                            {% if candidates is empty %}
                                <option value="" disabled class="text-gray-500">Aucun candidat disponible</option>
                            {% else %}
                                {% for candidate in candidates %}
                                    <option value="{{ candidate.id }}">{{ candidate.fullName }} - {{ candidate.email }}</option>
                                {% endfor %}
                            {% endif %}
                        </select>
                        {% if candidates is empty %}
                            <p class="text-sm text-gray-500 mt-2">
                                <i class="bi bi-info-circle mr-1"></i>
                                Les candidats qui ont postulé à vos offres apparaîtront ici.
                            </p>
                        {% else %}
                            <p class="text-sm text-green-600 mt-2">
                                <i class="bi bi-check-circle mr-1"></i>
                                {{ candidates|length }} candidat{{ candidates|length > 1 ? 's' : '' }} disponible{{ candidates|length > 1 ? 's' : '' }}
                            </p>
                        {% endif %}
                    </div>

                    <!-- Subject -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="bi bi-tag mr-1"></i>
                            Sujet
                        </label>
                        <input type="text" id="subject" name="subject" placeholder="Entrez le sujet du message..."
                               class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all" required>
                    </div>

                    <!-- Message Content -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="bi bi-chat-text mr-1"></i>
                            Message
                        </label>
                        <textarea id="content" name="content" rows="6" placeholder="Tapez votre message ici..."
                                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all resize-vertical" required></textarea>
                    </div>

                    <!-- Actions -->
                    <div class="flex gap-3 pt-4">
                        <button type="button" id="cancelBtn"
                                class="flex-1 bg-gray-100 text-gray-700 font-medium px-6 py-3 rounded-xl hover:bg-gray-200 transition-colors">
                            Annuler
                        </button>
                        <button type="submit"
                                class="flex-1 bg-gradient-to-r from-green-500 to-teal-500 text-white font-bold px-6 py-3 rounded-xl hover:shadow-lg hover:scale-105 transition-all duration-200">
                            <i class="bi bi-send mr-2"></i>
                            Envoyer le Message
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript for Modal -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('newMessageModal');
    const newMessageBtn = document.querySelector('button:has(.bi-plus-circle)');
    const closeModal = document.getElementById('closeModal');
    const cancelBtn = document.getElementById('cancelBtn');
    const messageForm = document.getElementById('messageForm');

    // Reply to message function
    function replyToMessage(candidateId, originalSubject) {
        // Open modal
        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';

        // Pre-select the candidate
        const recipientSelect = document.getElementById('recipient');
        recipientSelect.value = candidateId;

        // Set subject with Re: prefix
        const subjectInput = document.getElementById('subject');
        subjectInput.value = 'Re: ' + originalSubject.replace('Message de ', '');

        // Focus on content
        const contentTextarea = document.getElementById('content');
        contentTextarea.focus();
    }

    // Make function globally available
    window.replyToMessage = replyToMessage;

    // Open modal
    newMessageBtn.addEventListener('click', function() {
        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
    });

    // Close modal functions
    function closeModalFunc() {
        modal.classList.add('hidden');
        document.body.style.overflow = 'auto';
        messageForm.reset();
    }

    closeModal.addEventListener('click', closeModalFunc);
    cancelBtn.addEventListener('click', closeModalFunc);

    // Close on outside click
    modal.addEventListener('click', function(e) {
        if (e.target === modal) {
            closeModalFunc();
        }
    });

    // Handle form submission
    messageForm.addEventListener('submit', function(e) {
        // Let the form submit normally to the backend
        // The page will reload with flash messages
    });
});
</script>

{% endblock %}
