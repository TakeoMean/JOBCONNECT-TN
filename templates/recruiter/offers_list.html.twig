{# templates/recruiter/offers_list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mes Offres d'Emploi - JobConnect TN{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50">

    <!-- HEADER SECTION -->
    <div class="relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 to-purple-600/10"></div>
        <div class="relative py-16">
            <div class="max-w-7xl mx-auto px-6 text-center">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-500 rounded-2xl mb-6 shadow-lg">
                    <i class="bi bi-file-earmark-text-fill text-2xl text-white"></i>
                </div>
                <h1 class="text-4xl md:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600 mb-4">
                    Mes Offres d'Emploi
                </h1>
                <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
                    Gérez vos offres publiées et suivez leur performance
                </p>
            </div>
        </div>
    </div>

    <!-- CONTENT SECTION -->
    <div class="max-w-7xl mx-auto px-6 pb-20 -mt-8 relative z-10">

        <!-- STATS BAR -->
        <div class="bg-white rounded-2xl shadow-lg p-6 mb-8 border border-gray-100">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
                <div class="flex flex-col items-center">
                    <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-xl flex items-center justify-center mb-2">
                        <i class="bi bi-file-earmark-text text-white text-xl"></i>
                    </div>
                    <span class="text-2xl font-bold text-gray-800">{{ offers|length }}</span>
                    <span class="text-sm text-gray-500">Offres totales</span>
                </div>
                <div class="flex flex-col items-center">
                    <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-500 rounded-xl flex items-center justify-center mb-2">
                        <i class="bi bi-eye text-white text-xl"></i>
                    </div>
                    <span class="text-2xl font-bold text-gray-800">0</span>
                    <span class="text-sm text-gray-500">Vues totales</span>
                </div>
                <div class="flex flex-col items-center">
                    <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-pink-500 rounded-xl flex items-center justify-center mb-2">
                        <i class="bi bi-people text-white text-xl"></i>
                    </div>
                    <span class="text-2xl font-bold text-gray-800">0</span>
                    <span class="text-sm text-gray-500">Candidatures</span>
                </div>
                <div class="flex flex-col items-center">
                    <div class="w-12 h-12 bg-gradient-to-r from-orange-500 to-red-500 rounded-xl flex items-center justify-center mb-2">
                        <i class="bi bi-check-circle text-white text-xl"></i>
                    </div>
                    <span class="text-2xl font-bold text-gray-800">0</span>
                    <span class="text-sm text-gray-500">Postes pourvus</span>
                </div>
            </div>
        </div>

        <!-- ACTION BUTTONS -->
        <div class="flex flex-col sm:flex-row gap-4 mb-8 justify-between items-center">
            <div class="flex gap-3">
                <a href="{{ path('recruiter_offer_new') }}"
                   class="inline-flex items-center bg-gradient-to-r from-blue-500 to-purple-500 text-white font-bold px-6 py-3 rounded-xl hover:shadow-lg hover:scale-105 transition-all duration-200">
                    <i class="bi bi-plus-circle mr-2"></i>
                    Nouvelle Offre
                </a>
                <button class="inline-flex items-center bg-white text-gray-700 font-medium px-6 py-3 rounded-xl border border-gray-200 hover:bg-gray-50 transition-colors duration-200">
                    <i class="bi bi-funnel mr-2"></i>
                    Filtrer
                </button>
            </div>
            <div class="text-sm text-gray-500">
                {{ offers|length }} offre{{ offers|length > 1 ? 's' : '' }} trouvée{{ offers|length > 1 ? 's' : '' }}
            </div>
        </div>

        {% if offers is empty %}
            <!-- EMPTY STATE -->
            <div class="bg-white rounded-3xl shadow-xl p-12 text-center border border-gray-100">
                <div class="w-24 h-24 bg-gradient-to-r from-blue-100 to-purple-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="bi bi-file-earmark-x text-4xl text-blue-500"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-800 mb-4">Aucune offre publiée</h3>
                <p class="text-gray-600 mb-8 max-w-md mx-auto">
                    Vous n'avez pas encore publié d'offres d'emploi. Créez votre première offre pour commencer à recevoir des candidatures.
                </p>
                <a href="{{ path('recruiter_offer_new') }}"
                   class="inline-flex items-center bg-gradient-to-r from-blue-500 to-purple-500 text-white font-bold px-8 py-4 rounded-xl hover:shadow-lg hover:scale-105 transition-all duration-200">
                    <i class="bi bi-plus-circle mr-2"></i>
                    Créer ma première offre
                </a>
            </div>
        {% else %}
            <!-- OFFERS GRID -->
            <div class="grid lg:grid-cols-2 xl:grid-cols-3 gap-6">
                {% for offer in offers %}
                    <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden group hover:-translate-y-1">

                        <!-- Card Header -->
                        <div class="bg-gradient-to-r from-blue-500 to-purple-500 p-4 text-white">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <h3 class="text-lg font-bold mb-1 line-clamp-2">{{ offer.title }}</h3>
                                    <div class="flex items-center text-blue-100 text-sm">
                                        <i class="bi bi-geo-alt mr-1"></i>
                                        {{ offer.location }}
                                    </div>
                                </div>
                                <div class="flex-shrink-0 ml-3">
                                    <div class="w-10 h-10 bg-white/20 rounded-lg flex items-center justify-center">
                                        <i class="bi bi-building text-white text-lg"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Card Content -->
                        <div class="p-6">
                            <p class="text-gray-600 mb-4 line-clamp-3">
                                {{ offer.description|length > 120 ? offer.description|slice(0, 120) ~ '...' : offer.description }}
                            </p>

                            <!-- Job Details -->
                            <div class="space-y-2 mb-4">
                                <div class="flex items-center text-sm text-gray-500">
                                    <i class="bi bi-cash mr-2 text-green-500"></i>
                                    {{ offer.salary ? offer.salary ~ ' DT' : 'Salaire non indiqué' }}
                                </div>
                                <div class="flex items-center text-sm text-gray-500">
                                    <i class="bi bi-briefcase mr-2 text-blue-500"></i>
                                    {{ offer.contractType }}
                                    {% if offer.isRemote %}
                                        <span class="ml-2 inline-flex items-center px-2 py-1 rounded-full text-xs bg-green-100 text-green-800">
                                            <i class="bi bi-house mr-1"></i>
                                            Remote
                                        </span>
                                    {% endif %}
                                </div>
                            </div>

                            <!-- Stats -->
                            <div class="grid grid-cols-3 gap-4 mb-4 p-3 bg-gray-50 rounded-xl">
                                <div class="text-center">
                                    <div class="text-lg font-bold text-blue-600">0</div>
                                    <div class="text-xs text-gray-500">Vues</div>
                                </div>
                                <div class="text-center">
                                    <div class="text-lg font-bold text-purple-600">0</div>
                                    <div class="text-xs text-gray-500">Candidatures</div>
                                </div>
                                <div class="text-center">
                                    <div class="text-lg font-bold text-green-600">0</div>
                                    <div class="text-xs text-gray-500">Sélectionnés</div>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="flex gap-2">
                                <a href="{{ path('recruiter_offer_applications', {'id': offer.id}) }}"
                                   class="flex-1 bg-gradient-to-r from-green-500 to-emerald-500 text-white text-center py-2 px-4 rounded-lg hover:shadow-md transition-all duration-200 text-sm font-medium">
                                    <i class="bi bi-people mr-1"></i>
                                    Candidatures
                                </a>
                                <button class="p-2 text-gray-400 hover:text-gray-600 transition-colors duration-200 rounded-lg hover:bg-gray-100">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Card Footer -->
                        <div class="px-6 pb-4">
                            <div class="flex items-center justify-between text-xs text-gray-500">
                                <span>Publié le {{ offer.createdAt|date('d/m/Y') }}</span>
                                <div class="flex items-center">
                                    <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
                                    Active
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <!-- BACK TO DASHBOARD -->
        <div class="text-center mt-12">
            <a href="{{ path('recruiter_dashboard') }}"
               class="inline-flex items-center bg-white text-gray-700 font-bold px-8 py-4 rounded-xl border border-gray-200 hover:bg-gray-50 hover:shadow-lg transition-all duration-200">
                <i class="bi bi-arrow-left mr-2"></i>
                Retour au Dashboard
            </a>
        </div>
    </div>

</div>

<style>
.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>
{% endblock %}
