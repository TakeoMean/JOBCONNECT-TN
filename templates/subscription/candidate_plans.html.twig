{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-cyan-50 py-20">
    <h1 class="text-7xl font-black text-center mb-20 bg-gradient-to-r from-blue-600 to-cyan-600 bg-clip-text text-transparent">
        Abonnements Candidats
    </h1>

    <div class="grid md:grid-cols-3 gap-16 max-w-7xl mx-auto px-6">
        <!-- Gratuit -->
        <div class="bg-white rounded-3xl shadow-2xl p-12 text-center">
            <h2 class="text-5xl font-black">Gratuit</h2>
            <p class="text-8xl font-black mt-8">0 DT</p>
            <ul class="mt-12 space-y-6 text-2xl">
                <li>✅ 10 candidatures/mois</li>
                <li>✅ Profil visible</li>
                <li>❌ Badge Premium</li>
            </ul>
            <button class="mt-16 bg-gray-600 text-white font-black text-3xl px-24 py-10 rounded-full">Actuel</button>
        </div>

        <!-- Premium Candidat -->
        <div class="bg-gradient-to-br from-yellow-400 to-orange-500 rounded-3xl shadow-2xl p-12 text-center transform scale-110 relative">
            <div class="absolute -top-8 left-1/2 -translate-x-1/2 bg-red-600 text-white px-12 py-4 rounded-full text-2xl font-black">
                POPULAIRE
            </div>
            <h2 class="text-5xl font-black text-white">Premium</h2>
            <p class="text-8xl font-black text-white mt-8">150 DT</p>
            <ul class="mt-12 space-y-6 text-2xl text-white">
                <li>✅ Candidatures illimitées</li>
                <li>✅ Profil en haut</li>
                <li>✅ Badge Premium</li>
                <li>✅ Accès tests</li>
            </ul>
            <a href="{{ path('fake_payment', {'type': 'candidat', 'plan': 'premium'}) }}" 
               class="mt-16 bg-white text-orange-600 font-black text-3xl px-24 py-10 rounded-full block">
                Choisir
            </a>
        </div>

        <!-- Premium+ Candidat -->
        <div class="bg-gradient-to-br from-purple-600 to-pink-600 rounded-3xl shadow-2xl p-12 text-center text-white">
            <h2 class="text-5xl font-black">Premium+</h2>
            <p class="text-8xl font-black mt-8">290 DT</p>
            <ul class="mt-12 space-y-6 text-2xl">
                <li>✅ Tout Premium</li>
                <li>✅ Contact direct recruteurs</li>
                <li>✅ Offres exclusives</li>
                <li>✅ Badge VIP</li>
            </ul>
            <a href="{{ path('fake_payment', {'type': 'candidat', 'plan': 'premium_plus'}) }}" 
               class="mt-16 bg-yellow-400 text-purple-900 font-black text-3xl px-24 py-10 rounded-full block">
                Choisir
            </a>
        </div>
    </div>
</div>
{% endblock %}