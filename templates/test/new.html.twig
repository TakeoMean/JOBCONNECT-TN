{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-indigo-50 to-purple-50 py-20">
    <div class="max-w-4xl mx-auto bg-white rounded-3xl shadow-2xl p-16">
        <h1 class="text-6xl font-black text-center mb-16 bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
            Créer un Test Technique
        </h1>

        <form method="post" class="space-y-12">
            <input type="text" name="title" placeholder="Titre du test (ex: Test PHP Symfony)" required class="w-full px-10 py-8 border-2 rounded-2xl text-2xl">
            
            <div class="grid md:grid-cols-2 gap-12">
                <input type="number" name="duration" value="15" required class="w-full px-10 py-8 border-2 rounded-2xl text-2xl" placeholder="Durée (minutes)">
                <input type="number" name="minScore" value="70" required class="w-full px-10 py-8 border-2 rounded-2xl text-2xl" placeholder="Score minimum (%)">
            </div>

            <div class="bg-gray-50 p-12 rounded-3xl">
                <h2 class="text-4xl font-black mb-8">Question 1</h2>
                <textarea name="question" rows="4" placeholder="Votre question..." required class="w-full px-10 py-8 border-2 rounded-2xl text-xl mb-8"></textarea>

                <div class="space-y-8">
                    <label class="flex items-center space-x-6 text-2xl">
                        <input type="radio" name="correct" value="1" required class="w-10 h-10">
                        <input type="text" name="answer1" placeholder="Réponse A" required class="flex-1 px-10 py-6 border-2 rounded-2xl text-xl">
                    </label>
                    <label class="flex items-center space-x-6 text-2xl">
                        <input type="radio" name="correct" value="2" class="w-10 h-10">
                        <input type="text" name="answer2" placeholder="Réponse B" required class="flex-1 px-10 py-6 border-2 rounded-2xl text-xl">
                    </label>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-black text-4xl px-32 py-12 rounded-full hover:shadow-2xl transform hover:scale-110 transition">
                    CRÉER LE TEST
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}